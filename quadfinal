#include<stdio.h>
#include<math.h>
struct f
{
    double r1,r2;
};
double quad (double a, double b, double c, double *r1, double *r2,struct f *s)
{
  double r;


  r = b * b - 4 * a * c;
  if (r > 0)
    {
      *r1 = (-b - sqrt (r)) / (2 * a);

      *r2 = (-b + sqrt (r)) / (2 * a);
      printf (" the roots are real and unequal");
      
    }
  else if (r == 0)
    {
      *r2 = *r1 = -b / (2 * a);
      printf (" the roots are real and equal");
      
    }
  else
    {
      s->r1 = -b / (2 * a);

      s->r2 = (sqrt (-r)) / (2 * a);

      printf (" the roots are imaginary and unequal");
      
    }

}
double input(double *e,double *d,double *r)
{
  double a,b,c;  
  printf ("\n enter a,b and c:\n");
  scanf ("%lf%lf%lf", &a, &b, &c);
  *e=a;
  *d=b;
  *r=c;
}

void main ()
{
  double r1,r2,a,b,c;
  r1=r2=0;
  struct f sq;
     input(&a,&b,&c);
    int n=quad (a, b, c, &r1, &r2,&sq);
   
  
  
  if (n==1||n==2)printf ("\nroots are: %.2lf and %.2lf", r1, r2);
  else
    printf ("\nroots are: %.2lf+%.2lfi and %.2lf-%.2lfi",sq.r1,sq.r2,sq.r1,sq.r2);
      
}
